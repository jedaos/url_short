<div class="form">
    <h1>Enter your URL</h1>
    <small>After you enter a URL, you will be redirected to the index</small>
    <%= form_for :url do |f| %>
      <div class="field">
        <%= f.label :long_url %>
        <%= f.text_field :long_url %>
      </div>
      <div class="action">
        <%= f.submit "Shorten" %>
      </div>
      <% end %>
    </div>

<%= link_to "Home", root_path %>
